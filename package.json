{
  "name": "penguin_project",
  "version": "1.0.0",
  "description": "Simple backend projet for test Node.js, Express, TypeScript and TypeORM",
  "main": "./src/server.js",
  "scripts": {
    "dev": "nodemon src/server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node -r ts-node/register ./src/server.ts",
    "start:watch": "nodemon",
    "build": "tsc",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js"
  },
  "keywords": ["Node", "express", "TypeScript", "typeorm"],
  "author": "lkogici",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.20.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "pg": "^8.1.0",
    "reflect-metadata": "^0.1.13",
    "tslib": "^1.11.2",
    "typeorm": "^0.2.24"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/node": "^13.13.5",
    "eslint": "^7.0.0",
    "eslint-plugin-import": "^2.20.2",
    "nodemon": "^2.0.3",
    "ts-node": "^8.10.1",
    "typescript": "^3.8.3"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "resolutions": {
    "ts.lib": "1.11.2"
  }
}
